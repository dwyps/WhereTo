<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bc_splash"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.startup.register.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/register_con_layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/register_text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="Where To"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/register_text_view_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:fontFamily="@font/montserrat"
            android:text="Travel planner app"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/register_text_view_title"
            app:layout_constraintStart_toStartOf="@+id/register_text_view_title"
            app:layout_constraintTop_toBottomOf="@+id/register_text_view_title" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_logo"
            app:layout_constraintBottom_toBottomOf="@+id/register_text_view_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/register_text_view_title"
            app:layout_constraintTop_toTopOf="@+id/register_text_view_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:background="@drawable/bc_login_form"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_con_layout_logo">

        <TextView
            android:id="@+id/register_text_view_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/montserrat"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:id="@+id/register_edit_text_name"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:inputType="textPersonName"
            android:layout_marginEnd="25dp"
            android:maxLength="10"
            android:fontFamily="@font/montserrat"
            android:focusable = "true"
            android:textColorHighlight = "@color/white"
            android:hint="Name"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"/>

        <EditText
            android:id="@+id/register_edit_text_email"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:inputType="textEmailAddress"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/montserrat"
            android:focusable = "true"
            android:textColorHighlight = "@color/white"
            android:hint="Email"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"/>

        <EditText
            android:id="@+id/register_edit_text_password"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:focusable = "true"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:inputType="textPassword"
            android:textColorHighlight = "@color/white"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"/>

        <EditText
            android:id="@+id/register_edit_text_check_password"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:focusable = "true"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:inputType="textPassword"
            android:textColorHighlight = "@color/white"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/montserrat"
            android:hint="Confirm Password"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"/>

        <Button
            android:id="@+id/register_btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:textColor="@color/white"
            android:text="REGISTER"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>